@model Bangboo_E_Commerce.Models.LoginViewModel

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PQT - Bangboo E-commerce</title>
    <link rel="icon" type="image/x-icon" href="/Asset/logo/sleep-mode.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9.1.1/swiper-bundle.min.css">
    <link rel="stylesheet" href="https://cdn.skypack.dev/lightgallery@2.0.0-beta.3/dist/css/lightgallery.css">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Hedvig+Letters+Serif:opsz@12..24&display=swap" rel="stylesheet">
    <link href="https://db.onlinewebfonts.com/c/efa6b62b9f14c00a8449fe121136f553?family=Haulage+Commercial+W00+Bold+It" rel="stylesheet">
    <link href="https://db.onlinewebfonts.com/c/3889a81d538246d1cdb7bf2bd997fa72?family=Korataki+W01+Regular" rel="stylesheet">
    <link href="https://db.onlinewebfonts.com/c/de335dd5a66ff095f317757fc7fb58a5?family=Korataki" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <div class="rec-prism">
            <div class="face face-front">
                <div class="content">
                    <h2>Sign in</h2>
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div class="field-wrapper">
                            <input id="email" type="text" name="Email" placeholder="Email" required autocomplete="off">
                            <label>Email</label>
                        </div>
                        <div class="field-wrapper">
                            <input id="password" type="password" name="Password" placeholder="password" autocomplete="new-password" required>
                            <label>Password</label>
                        </div>
                        <div class="field-wrapper">
                            <input type="submit" value="Login">
                        </div>
                        <span class="signup" onclick="window.location.href='Register';">Not a user? Sign up</span>
                        <span class="psw" onclick="showForgotPassword()">Forgot Password?</span>
                        <div class="inline">
                            <span class="Subscribe" onclick="window.location.href='Subscribe';">Subscribe?</span>
                            <span class="Contact" onclick="showContact()">Contact Us?</span>
                        </div>
                    </form>
                </div>
            </div>

            <div class="face face-right">
                <div class="content">
                    <h2>Subscribe</h2>
                    <p style="font-size: 16px">Enter your email so we can send you the latest updates!</p>
                    <form onsubmit="showLogin()">
                        <div class="field-wrapper">
                            <input type="text" name="email" placeholder="email">
                            <label>e-mail</label>
                        </div>
                        <div class="field-wrapper">
                            <input type="submit">
                        </div>
                        <span class="singin" onclick="showLogin()">Go back</span>
                    </form>
                </div>
            </div>

            <div class="face face-left">
                <div class="content">
                    <h2>Forgot your password?</h2>
                    <p style="font-size: 16px">Enter your email so we can send you a new password</p>
                    <form onsubmit="showLogin()">
                        <div class="field-wrapper">
                            <input type="text" name="email" placeholder="email">
                            <label>e-mail</label>
                        </div>
                        <div class="field-wrapper">
                            <input type="submit" value="Confirm" onclick="showLogin()">
                        </div>
                        <span class="signup" onclick="window.location.href='Register';">Not a user?  Sign up</span>
                    </form>
                </div>
            </div>

            <div class="face face-back">
                <div class="content">
                    <h2>Contact us</h2>
                    <form onsubmit="showLogin">
                        <div class="field-wrapper">
                            <input type="text" name="name" placeholder="name">
                            <label>Name</label>
                        </div>
                        <div class="field-wrapper">
                            <input type="text" name="email" placeholder="email">
                            <label>e-mail</label>
                        </div>
                        <div class="field-wrapper">
                            <textarea placeholder="your message"></textarea>
                            <label>your message</label>
                        </div>
                        <div class="field-wrapper">
                            <input type="submit">
                        </div>
                        <span class="singin" onclick="showLogin()">Go back</span>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
        let prism = document.querySelector(".rec-prism");

        function showLogin() {
            prism.style.transform = "translateZ(-100px)";
        }

        function showForgotPassword() {
            prism.style.transform = "translateZ(-100px) rotateY( 90deg)";
        }

        function showSubscribe() {
            prism.style.transform = "translateZ(-100px) rotateY( -90deg)";
        }

        function showContact() {
            prism.style.transform = "translateZ(-100px) rotateY( -180deg)";
        }
    </script>
    <script src="~/js/Error.js"></script>
</body>