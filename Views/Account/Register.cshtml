@model Bangboo_E_Commerce.Models.RegisterViewModel

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PQT - Bangboo E-commerce</title>
    <link rel="icon" type="image/x-icon" href="/Asset/logo/sleep-mode.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9.1.1/swiper-bundle.min.css">
    <link rel="stylesheet" href="https://cdn.skypack.dev/lightgallery@2.0.0-beta.3/dist/css/lightgallery.css">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Hedvig+Letters+Serif:opsz@12..24&display=swap" rel="stylesheet">
    <link href="https://db.onlinewebfonts.com/c/efa6b62b9f14c00a8449fe121136f553?family=Haulage+Commercial+W00+Bold+It" rel="stylesheet">
    <link href="https://db.onlinewebfonts.com/c/3889a81d538246d1cdb7bf2bd997fa72?family=Korataki+W01+Regular" rel="stylesheet">
    <link href="https://db.onlinewebfonts.com/c/de335dd5a66ff095f317757fc7fb58a5?family=Korataki" rel="stylesheet">
    <style>
        label {
            font-size: 18px;
        }
    </style>
</head>
<body style="margin: 0; height: 100%; overflow: hidden">
        <div class="wrapper" style="width: 350px; height: 400px; position: relative; top: -40px;">
            <div class="rec-prism">
                <div class="face face-front" style="width: 350px; height: 600px; max-height: 525px; font-size: 16px;">
                    <div class="content">
                    <h2>Sign up</h2>
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div class="field-wrapper">
                            <input id="username" type="text" name="IdPhaethon" placeholder="username" required autocomplete="off">
                            <label style="font-size: 18px;">Username</label>
                        </div>
                        <div class="field-wrapper">
                            <input id="fullname" type="text" name="FullNamePhatheon" placeholder="fullname" required>
                            <label style="font-size: 18px;">Full Name</label>
                        </div>
                        <div class="field-wrapper">
                            <input id="email" type="text" name="Email" placeholder="Email" required>
                            <label style="font-size: 18px;">Email</label>
                        </div>
                        <div class="field-wrapper">
                            <input id="password" type="password" name="Password" placeholder="password" required>
                            <label style="font-size: 18px;">Password</label>
                        </div>
                        <div class="field-wrapper">
                            <input id="confirm-password" type="password" name="ConfirmPassword" placeholder="re-password" required">
                            <label style="font-size: 18px;">Confirm Password</label>
                        </div>
                        <div class="field-wrapper">
                            <input id="address" type="text" name="Address" placeholder="address" required>
                            <label style="font-size: 18px;">Address</label>
                        </div>
                        <div class="field-wrapper">
                            <input type="submit" value="Confirm">
                        </div>
                        <span class="singin" style="font-size: 18px; margin-top: 15px;" onclick="window.location.href='Login';">Already a user? Sign in</span>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
        let prism = document.querySelector(".rec-prism");

        function showSignuppts1() {
            prism.style.transform = "translateZ(-100px)";
        }
        function showSignuppts2() {
            prism.style.transform = "translateZ(-100px) rotateY( -90deg)";
        }
    </script>
    <script src="~/js/Error.js"></script>
</body>